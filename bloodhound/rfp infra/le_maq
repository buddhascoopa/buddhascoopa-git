var=''
var=`df -kv | grep arbor `
echo "Filesystems Arbor e bp_aplic " 

disp_disk()
{
   tot=`echo $var | awk '{ print $2 }' `
   use=`echo $var | awk '{ print $3 }' `
   fre=`echo $var | awk '{ print $4 }' `
   fsi=`echo $var | awk '{ print $6 }' `

   echo "Filesystem : $fsi "
   echo "Total .....: $tot "
   echo "Usado .....: $use "
   echo "Livre .....: $fre "

}
echo ""
var=`df -vh | grep arbor  `
disp_disk

echo ""
var=`df -vh | grep bp_aplic`
disp_disk

